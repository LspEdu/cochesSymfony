{% extends 'base.html.twig' %}

{% block title %}RentACar
{% endblock %}

{% block body %}

	{{ include('./user/_nav.html.twig') }}
	<div class="container">

		<h1>
			{{ car.brand}}
			{{ car.model  }}
		</h1>

		<div class="table-responsive  pt-5 ">
			<table class="table table-secondary">

				<tbody>
					<tr class="">
						<th scope="row">Matrícula</th>
						<th>Marca</th>
						<th>Modelo</th>
						<th>Kilometraje Actual</th>
						<th>Motor</th>
						<th>Color</th>
						<th>Precio</th>
                        {% if user == car.owner %}
                        <td rowspan="2" style=" text-align: center; vertical-align: middle;"><a class="btn btn-warning" href="{{path('car_edit', {'id': car.id})}}">Editar</a></td>
						<td rowspan="2" style=" text-align: center; vertical-align: middle;"><a class="btn btn-success" href="{{path('bill_car', {'id': car.id})}}">Facturas</a></td>
						<td rowspan="2" style=" text-align: center; vertical-align: middle;"><a class="btn btn-danger" href="{{path('car_delete', {'id': car.id})}}">Borrar</a></td>
						
                        {% else %}
                        <td rowspan="2" style=" text-align: center; vertical-align: middle;"><a class="btn btn-success" href="{{path('car_bill', {'id': car.id})}}">Alquilar</a></td>
                        {% endif %}

					</tr>
					<tr class="">
						<td scope="row">{{car.plate}}</td>
						<td>{{car.brand}}</td>
						<td>{{car.model}}</td>
						<td>{{car.km?:'Desconocido'}}</td>
						<td>{{car.engine?:'Desconocido'}}</td>
						<td>{{car.color?:'Desconocido'}}</td>
						<td>{{car.price}}€</td>
					</tr>
				</tbody>
			</table>

		</div>


	</div>
{% endblock %}
