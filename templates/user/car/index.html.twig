{% extends 'base.html.twig' %}

{% block title %}RentACar
{% endblock %}

{% block body %}

	{{ include('./user/_nav.html.twig') }}
	<div class="container">

		<h1>
			{{ car.brand}}
			{{ car.model  }}
		</h1>

		<div class="table-responsive  pt-5 ">
			<table class="table table-secondary">

				<tbody>
					<tr class="">
						<td scope="row">Matr√≠cula</td>
						<td>Marca</td>
						<td>Modelo</td>
						<td>Kilometraje Actual</td>
						<td>Motor</td>
						<td>Color</td>
                        {% if user == car.owner %}
                        <td rowspan="2" style=" text-align: center; vertical-align: middle;"><a class="btn btn-primary" href="/user/car/edit/{{car.id}}">Editar</a></td>
                        {% else %}
                        <td rowspan="2" style=" text-align: center; vertical-align: middle;"><a class="btn btn-success" href="/user/car/createBill/{{car.id}}">Alquilar</a></td>
                        {% endif %}

					</tr>
					<tr class="">
						<td scope="row">{{car.plate}}</td>
						<td>{{car.brand}}</td>
						<td>{{car.model}}</td>
						<td>{{car.km?:'Desconocido'}}</td>
						<td>{{car.engine?:'Desconocido'}}</td>
						<td>{{car.color?:'Desconocido'}}</td>
					</tr>
				</tbody>
			</table>

		</div>


	</div>
{% endblock %}
