{% extends 'base.html.twig' %}

{% block title %}RentACar
{% endblock %}

{% block body %}
	{{ include('./user/_nav.html.twig') }}

	<div class="container">
		<div class="table-responsive  pt-5 ">
			<table class="table table-secondary">
				<thead>
					<tr class="">
						<th scope="row">Matrícula</th>
						<th>Marca</th>
						<th>Modelo</th>
						<th>Kilometraje Actual</th>
						<th>Motor</th>
						<th>Color</th>
						<th>Precio</th>
						<th colspan="2" style="text-align:center">Acciones</th>
					</tr>
				</thead>
				<tbody>
					{% for car in cars %}
						<tr class="">
							<td scope="row">
								<a class="link-dark" href="{{path('car_index', {'id': car.id})}}">{{car.plate}}</a>
							</td>
							<td>{{car.brand}}</td>
							<td>{{car.model}}</td>
							<td>{{car.km?:'Desconocido'}}</td>
							<td>{{car.engine?:'Desconocido'}}</td>
							<td>{{car.color?:'Desconocido'}}</td>
							<td>{{car.price}}
								€</td>
							<td style=" text-align: center; vertical-align: middle;">
								<a class="btn btn-primary" href="{{ path('car_edit', {'id': car.id}) }}">Editar</a>
							</td>
							<td style=" text-align: center; vertical-align: middle;">
								<a class="btn btn-danger" href="{{ path('car_delete', {'id': car.id})}}">Borrar</a>
							</td>

						</tr>
					{% endfor %}
				</tbody>
			</tbody>
		</table>

	</div>
</div>
{% endblock %}
