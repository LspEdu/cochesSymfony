{% extends 'base.html.twig' %} {% block title %} Factura Nº
{{ bill.id }}
{% endblock %} {% block styles %}
<style>
  html,
  body {
    height: 100%;
  }
</style>
{% endblock %} {% block body %}
<div class="container border border-5  h-100">
  <div class="row d-flex justify-content-around m-2">
    <div class="col-3 text-center">
      <img
        src="https://i.ibb.co/Gpv3KwY/RC.png"
        class="img-fluid wh-50 rounded-top"
        alt=""
      />
    </div>
    <div class="col-3 border border-2 pt-3">
      <p><strong>Empresa:</strong>RentACar S.L.</p>
      <p>
        <strong>CIF:</strong>
        B-79949947
      </p>
      <p>
        <strong>Ubicación: </strong> Calle Cualquiera Nº 12 11540 Sanlúcar de
        Barrameda
      </p>
    </div>
  </div>
  <hr />
  <div class="d-flex row justify-content-around mt-4">
    <div class="col-5 fs-1 fw-bolder">
      <h1 class="text-decoration-underline">Datos del cliente</h1>
    </div>
    <div class="col-5"> 
      <div class="row">
        <div class="col-6 fs-4 fw-bold">
          Nombre:
        </div>
        <div class="col-6">
          {{ user.name }}
        </div>
      </div>
      <div class="row ">
        <div class="col-6 fs-4 fw-bold">
          Nickname:
        </div>
        <div class="col-6">
          {{ user.username}}
        </div>
      </div>
    </div>
  </div>
  <hr />
  <div class="row ">
    <div class="col-11  ms-2">
      <div class="table-responsive">
        <table class="table table-striped
        table-hover	
        table-borderless
        table-secondary
        align-middle">
          <thead class="table-light">
            <caption>Vehículo propiedad de: {{car.getOwner}}</caption>
            <tr>
              <th>Precio</th>
              <th></th>
              <th></th>
              <th class="text-end">{{car.price}} €</th>
            </tr>
            </thead>
            <tbody class="table-group-divider">
              <tr class="table-secondary" >
                <td scope="row">Marca</td>
                <td></td>
                <td>{{car.brand}}</td>
                <td></td>
              </tr>
              <tr class="table-secondary" >
                <td scope="row">Modelo</td>
                <td></td>
                <td>{{car.model}}</td>
                <td></td>
              </tr>
              <tr class="table-secondary">
                <td scope="row">Matrícula</td>
                <td></td>
                <td>{{car.plate}}</td>
                <td></td>
              </tr>
              <tr class="table-secondary" >
                <td scope="row">Kilómetros</td>
                <td></td>
                <td>{{car.km?:'Desconocido'}}</td>
                <td></td>
              </tr>
              <tr class="table-secondary" >
                <td scope="row">Motor</td>
                <td></td>
                <td>{{car.engine?:'Desconocido'}}</td>
                <td></td>
              </tr>
              <tr class="table-secondary" >
                <td scope="row">Color</td>
                <td></td>
                <td>{{car.color?:'Desconocido'}}</td>
                <td></td>
              </tr>
            </tbody>
            <tfoot>
              
            </tfoot>
        </table>
      </div>
      
    </div>
  </div>
</div>

{% endblock %}
