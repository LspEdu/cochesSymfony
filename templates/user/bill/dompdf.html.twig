<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8"/>
		<title>
			{% block title %}RentACar
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>"/>
		{# Run `composer require symfony/webpack-encore-bundle` to start using
				    Symfony UX #}

			{{ encore_entry_link_tags("app")  }}
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"/>
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
			<style>
				html,
				body {
					height: 100%;
				}

				@media print {
					.bottom {
						page-break-after: always;
					}
				}
				tr {
					line-height: 0.5em;
				}

				.bottom {
					position: relative;
					bottom: 0;
				}

				.space {
					height: 42%;
				}
			</style>



	</head>
	<body>



	{% for bill in bills %}
		<div class="  border border-5 h-100">
			<div class="row d-flex justify-content-around m-2">
				<div class="col-3 text-center">
					<img src="{{ absolute_url(asset('img/RC.jpg')) }}" class="img-fluid wh-50 rounded-top" alt="" {# style="width:25%" #}/>
				</div>
				<div class="col-3  pt-3">
					<p>
						<strong>Empresa:</strong>RentACar S.L.</p>
					<p>
						<strong>CIF:</strong>
						B-79949947
					</p>
					<p>
						<strong>Ubicación:
						</strong>
						Calle Cualquiera Nº 12 11540 Sanlúcar de
																																																        Barrameda
					</p>
				</div>
			</div>
			<hr/>
			<div class="d-flex row justify-content-around mt-4">
				<div class="col-5 fs-1 fw-bolder">
					<h1 class="text-decoration-underline">Datos del cliente</h1>
				</div>
				<div class="col-5">
					<div class="row">
						<div class="col-6 fs-4 fw-bold">
							Nombre:
						</div>
						<div class="col-6">
							{{ user.name }}
						</div>
					</div>
					<div class="row ">
						<div class="col-6 fs-4 fw-bold">
							Nickname:
						</div>
						<div class="col-6">
							{{ user.username}}
						</div>
					</div>
				</div>
			</div>
			<hr/>
			<div class="row ">
				<div class="col-11  ms-2">
					<div class="table-responsive">
						<table class="table table-striped table-hover table-borderless table-secondary align-middle">
							<thead class="table-light">
								<caption>Vehículo propiedad de:
									{{bill.getIdCar.getOwner}}</caption>
								<tr>
									<th>Precio</th>
									<th></th>
									<th></th>
									<th class="text-end">{{bill.getIdCar.price}}
										€</th>
								</tr>
							</thead>
							<tbody class="table-group-divider">
								<tr class="table-secondary">
									<td scope="row">Marca</td>
									<td></td>
									<td>{{bill.getIdCar.brand}}</td>
									<td></td>
								</tr>
								<tr class="table-secondary">
									<td scope="row">Modelo</td>
									<td></td>
									<td>{{bill.getIdCar.model}}</td>
									<td></td>
								</tr>
								<tr class="table-secondary">
									<td scope="row">Matrícula</td>
									<td></td>
									<td>{{bill.getIdCar.plate}}</td>
									<td></td>
								</tr>
								<tr class="table-secondary">
									<td scope="row">Kilómetros</td>
									<td></td>
									<td>{{bill.getIdCar.km?:'Desconocido'}}</td>
									<td></td>
								</tr>
								<tr class="table-secondary">
									<td scope="row">Motor</td>
									<td></td>
									<td>{{bill.getIdCar.engine?:'Desconocido'}}</td>
									<td></td>
								</tr>
								<tr class="table-secondary">
									<td scope="row">Color</td>
									<td></td>
									<td>{{bill.getIdCar.color?:'Desconocido'}}</td>
									<td></td>
								</tr>
							</tbody>
							<tfoot></tfoot>
						</table>
					</div>
				</div>
			</div>
			<div class="row space"></div>
			<div class="row bottom-0">
				<div class="bottom w-100">
					<div class="row">
						<div class="col-5"></div>
						<div class="col-2 ">
							<img src="https://i.ibb.co/Gpv3KwY/RC.png" class="img-fluid rounded-top opacity-50" alt=""/>
						</div>
						<div class="col-4"></div>
						<div class="col-1 bottom-0 d-flex justify-content-end flex-row-reverse  align-items-end ">
							<div>
								<p class="mt-auto mb-0">
									Pag
									{{loop.index}}
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endfor %}



	</body>
</html>